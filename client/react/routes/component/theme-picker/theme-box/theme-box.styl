setPart(color1, color2){
  .one{
    background-color color1
  }
  .two{
    background-color color2
  }
}

.theme-box{
  position relative
  border-radius 10px
  cursor pointer
  &.sm{
    width 28px
    height 28px
  }
  &.md{
    width 38px
    height 38px
  }
  &.lg{
    width 50px
    height 50px
  }
  border 3px solid #474646
  setTransition(0.2s)
  &:hover{
    border-color darken(#474646, 15%)
  }
  overflow hidden
  .part{
    display inline-block
    width 50%
    height 100%
  }
  &.sky{
    setPart(fb, white)
  }
  &.dark-light{
    setPart(white, deepblack)
  }
}
