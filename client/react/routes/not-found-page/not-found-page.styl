.not-found-page{
  .huge-log-bg{
    position absolute
    width 100%
    text-align center
    z-index 0
    top 50%
    opacity 0
    left 50%
    transform translate(-50%,-50%)
    animation appear 2s ease 1s forwards
    img{
      height 80vh
    }
  }
  @keyframes appear{
    from {
      opacity 0
    }
    to{
      opacity 1
    }
  }
  .page-wrapper{
    z-index 2
    position relative
    height 100vh
    .page-header{
      padding 12px 22px
      .app-logo{
        font-size 25px
        img{
          height 40px
        }
      }
    }
    .page-body{
      text-align center
      h1{
        margin-top 50px
        font-size xl + 15rem
        font-weight bold

      }
      .description{
        font-size l
        font-weight 550
        margin-top 30px
      }
    }
    .page-footer{
      text-align center
      margin-top 30px
      .nav-btn{
        padding 8px 0
        width 300px
        margin 15px
        transition all 0.2s ease
        text-align center
        font-size md - 0.2rem
        font-weight 550
      }
    }
  }
  &.dark-light{
    .page-wrapper{
      background-color rgba(#1a1a1a, 0.8)
      .app-logo{
        color white
      }
      h1{
        color favor
      }
      .description{
        color white
      }
      .nav-btn{
        color #1a1a1a
        background-color white
        border 2px solid transparent
        &:hover{
          border-color favor
          color favor
        }
      }
    }
  }
  &.sky{
    .page-wrapper{
      background-color rgba(white, 0.8)
      .app-logo{
        color #1a1a1a
      }
      h1{
        color primary
      }
      .description{
        color #1a1a1a
      }
      .nav-btn{
        color white
        background-color #1a1a1a
        border 2px solid transparent
        &:hover{
          border-color primary
          color primary
        }
      }
    }
  }
}
